#include <stdio.h>

int main() {
    int idade, menor_idade = 1000, maior_idade = 0;
    char sexo;
    float salario, soma_salarios = 0, total_salarios = 0;
    int mulheres_salario_ate_100 = 0;
    int total_pessoas = 0;

    printf("Digite os dados de idade, sexo (M/F) e salário. Digite uma idade negativa para encerrar.\n");

