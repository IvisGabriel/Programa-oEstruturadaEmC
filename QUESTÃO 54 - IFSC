#include <stdio.h>

int main() {
    int opcao;
    float num1, num2, num3;

    // Leitura dos valores
    printf("Digite a opcao (2, 3 ou 4): ");
    scanf("%d", &opcao);

    printf("Digite o valor de Num1: ");
    scanf("%f", &num1);

    printf("Digite o valor de Num2: ");
    scanf("%f", &num2);

    printf("Digite o valor de Num3: ");
    scanf("%f", &num3);

    // Verifica a opção e mostra o valor correspondente
    if (opcao == 2) {
        printf("Valor correspondente: %.2f\n", num1);
    } else if (opcao == 3) {
        printf("Valor correspondente: %.2f\n", num2);
    } else if (opcao == 4) {
        printf("Valor correspondente: %.2f\n", num3);
    } else {
        printf("Opcao invalida! Use apenas 2, 3 ou 4.\n");
    }

    return 0;
}
