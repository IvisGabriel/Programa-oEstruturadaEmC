#include <stdio.h>

int main() {
    // Declaração da variável para armazenar a temperatura em Fahrenheit
    float F, C;

    // Solicitar ao usuário que insira a temperatura em Fahrenheit
    printf("Digite a temperatura em graus Fahrenheit: ");
    scanf("%f", &F);

    // Fórmula de conversão de Fahrenheit para Celsius
    C = (F - 32) * (5.0 / 9.0);

    // Exibir o resultado da conversão
    printf("A temperatura em Celsius é: %.2f\n", C);

    return 0;
}
