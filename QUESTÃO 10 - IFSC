#include <stdio.h>

int main() {
    int num1, num2, soma;

    // Passo a) Ler o primeiro número inteiro
    printf("Digite o primeiro número: ");
    scanf("%d", &num1);

    // Passo b) Ler o segundo número inteiro
    printf("Digite o segundo número: ");
    scanf("%d", &num2);

    // Passo c) Efetuar a adição dos dois valores
    soma = num1 + num2;

    // Passo d) Apresentar o valor calculado
    printf("A soma dos dois números é: %d\n", soma);

    return 0;
}
