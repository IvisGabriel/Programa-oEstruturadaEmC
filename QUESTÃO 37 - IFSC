#include <stdio.h>

int main() {
    int anos, meses, dias, total_dias;

    // Entrada de dados
    printf("Digite sua idade (anos): ");
    scanf("%d", &anos);

    printf("Digite os meses além dos anos: ");
    scanf("%d", &meses);

    printf("Digite os dias além dos meses: ");
    scanf("%d", &dias);

    // Cálculo considerando 1 mês = 30 dias
    total_dias = (anos * 12 * 30) + (meses * 30) + dias;

    // Resultado
    printf("Você já viveu aproximadamente %d dias.\n", total_dias);

    return 0;
}
