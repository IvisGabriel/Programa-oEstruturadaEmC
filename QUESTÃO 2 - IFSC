#include <stdio.h>
#include <math.h>  // Para usar a funÃ§Ã£o pow() para calcular potÃªncias

int main() {
    int a, b, c;
    double Resultado;

    // Leitura dos valores de a, b e c
    printf("Digite a: ");
    scanf("%d", &a);
    printf("Digite b: ");
    scanf("%d", &b);
    printf("Digite c: ");
    scanf("%d", &c);

    // CÃ¡lculo
    Resultado = a * pow(b, c);

    // ExibiÃ§Ã£o do resultado
    printf("Resultado: %.2f\n", Resultado);

    return 0;
}
