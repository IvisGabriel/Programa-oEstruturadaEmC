#include <stdio.h>
#include <math.h>  // Para usar a funÃ§Ã£o pow() para calcular potÃªncias

int main() {
    int base, expoente;
    double Resultado;

    // Leitura dos valores de base e expoente
    printf("Digite a base: ");
    scanf("%d", &base);
    printf("Digite o expoente: ");
    scanf("%d", &expoente);

    // CÃ¡lculo
    Resultado = pow(base, expoente);

    // ExibiÃ§Ã£o do resultado
    printf("Resultado: %.2f\n", Resultado);

    return 0;
}


