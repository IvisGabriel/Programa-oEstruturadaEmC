#include <stdio.h>

int main() {
    int num;

    // Leitura do número
    printf("Digite um numero inteiro: ");
    scanf("%d", &num);

    // Verifica se é par ou ímpar
    if (num % 2 == 0) {
        printf("O numero %d eh par e ", num);
    } else {
        printf("O numero %d eh impar e ", num);
    }

    // Verifica se é positivo, negativo ou zero
    if (num > 0) {
        printf("positivo.\n");
    } else if (num < 0) {
        printf("negativo.\n");
    } else {
        printf("neutro (zero).\n");
    }

    return 0;
}
