#include <stdio.h>
int main() {
    int valor, somaPositivos = 0, negativos = 0;
    for (int i = 0; i < 50; i++) {
        printf("Digite o valor %d: ", i + 1);
        scanf("%d", &valor);
        if (valor >= 0)
            somaPositivos += valor;
        else
            negativos++;
    }
    printf("Soma dos positivos: %d\nQuantidade de negativos: %d\n", somaPositivos, negativos);
    return 0;
